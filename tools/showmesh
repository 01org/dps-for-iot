#!/bin/bash

OPTIND=1

engine="neato"
outfile=''
logfile="log"
num_subs=1
num_kills=0
debug=''
noMuted=''

while getopts "de:hk:l:mo:s:" opt; do
    case "$opt" in
    d)  debug="-d"
        ;;
    e)  engine=$OPTARG
        ;;
    h)  echo "[-d] [-m] [-o <png file>] [-l <logfile>] [-k count] [-s <count>] [-e <engine>] <mesh-file>"
        exit 0
        ;;
    k)  num_kills=$OPTARG
        ;;
    l)  logfile=$OPTARG
        ;;
    m)  noMuted="-m"
        ;;
    o)  outfile=$OPTARG
        ;;
    s)  num_subs=$OPTARG
        ;;
    esac
done

shift $((OPTIND-1))

killall -q display

if [[ $outfile != '' ]]; then
    build/test/bin/make_mesh $noMuted $debug -s $num_subs -k $num_kills -f $@ 2> $logfile | $engine -Tpng > $outfile
    display $outfile&
else
    build/test/bin/make_mesh $noMuted $debug -s $num_subs -k $num_kills -f $@ 2> $logfile | $engine -Tpng | display &
fi
