#!/bin/bash

# Include common functions
dir="${BASH_SOURCE%/*}"
if [[ ! -d "$dir" ]]; then dir="$PWD"; fi
. "$dir/common.sh"

py_sub
py_pub
sleep 2

assert_no_errors
expect_pubs_received 2 a/b/c

#
# Verify interop between C sub and python pub
#
reset_logs

sub a/b/c
py_pub
sleep 1

assert_no_errors
expect_pubs_received 2 a/b/c

#
# Verify interop between python pub and C sub
#
reset_logs

py_sub
pub a/b/c
sleep 1

assert_no_errors
expect_pubs_received 1 a/b/c
